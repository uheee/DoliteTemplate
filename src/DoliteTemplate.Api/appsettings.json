{
  "Key": {
    "Path": "keys"
  },
  "WebApi": {
    "RoutePrefix": ""
  },
  "Authentication": {
    "Schema": "Bearer",
    "TokenValidationParameters": {
      "ValidTypes": [
        "JWT"
      ],
      "ValidAlgorithms": [
        "ES256"
      ],
      "ValidateIssuerSigningKey": true,
      "ValidateIssuer": false,
      "ValidateAudience": false,
      "ValidateLifetime": true,
      "RequireExpirationTime": true
    }
  },
  "OpenApi": {
    "Version": "v1",
    "Title": "DoliteTemplate",
    "Description": "Some description of your API",
    "Security": {
      "Definition": {
        "Description": "JWT Authorization header using the Bearer scheme. Example: 'Authorization: Bearer {token}'",
        "Name": "Authorization",
        "In": "Header",
        "Type": "Http",
        "Scheme": "Bearer",
        "Reference": {
          "Type": "SecurityScheme",
          "Id": "Bearer"
        }
      },
      "Requirement": [
        {
          "Key": {
            "Reference": {
              "Type": "SecurityScheme",
              "Id": "Bearer"
            }
          },
          "Value": []
        }
      ]
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Async",
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "outputTemplate": "[{Timestamp:o} {Level:u3}] {Message:lj}{NewLine}{Exception}",
                "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Literate, Serilog.Sinks.Console"
              }
            }
          ]
        }
      }
    ]
  },
  "ConnectionStrings": {
    "Postgres": "host=localhost;username=postgres;password=postgres;database=postgres;Include Error Detail=true",
    "Redis": "localhost"
  },
  "Culture": {
    "Default": "zh-CN",
    "Cultures": [
      "zh-CN",
      "en-US"
    ]
  }
}